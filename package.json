{
  "name": "expressapp",
  "version": "1.0.0",
  "description": "express with typescript",
  "main": "index.js",
  "scripts": {
    "build": "webpack --config webpack.config.js",
    "start": "npm run build && node ./dist/server.js",
    "test": "jest"
  },
  "keywords": [
    "express",
    "typescript"
  ],
  "author": "Chester Yang",
  "license": "MIT",
  "devDependencies": {
    "@types/body-parser": "^1.17.0",
    "@types/chai": "^4.1.4",
    "@types/dotenv": "^4.0.3",
    "@types/express": "^4.16.0",
    "@types/jest": "^23.3.1",
    "@types/node": "^10.5.6",
    "@types/supertest": "^2.0.5",
    "chai": "^4.1.2",
    "jest": "^23.4.2",
    "mocha": "^5.2.0",
    "supertest": "^3.1.0",
    "ts-jest": "^23.1.2",
    "ts-loader": "^4.4.2",
    "ts-node": "^7.0.0",
    "tslint": "^5.11.0",
    "typescript": "^3.0.1",
    "webpack": "^4.16.4",
    "webpack-cli": "^3.1.0"
  },
  "dependencies": {
    "body-parser": "^1.18.3",
    "dotenv": "^6.0.0",
    "express": "^4.16.3"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsConfigFile": "tsconfig.json"
      }
    },
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ],
    "moduleDirectories": [
      "node_modules",
      "server"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testMatch": [
      "**/tests/**/*.test.(ts|js)"
    ],
    "testEnvironment": "node"
  },
  "eslintConfig": {
    "plugins": []
  }
}
